<?xml version="1.0" encoding="utf-8"?>
<!--Page layout for floor 7-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floor7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Button for fountain-->
        <Button
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:id="@+id/f_7_1"
            android:clickable="true"
            android:alpha="0"
            android:layout_above="@+id/f_7_3"
            android:layout_alignEnd="@+id/f_7_3"
            android:layout_marginEnd="12dp" />

        <!--Button for women's bathroom-->
        <Button
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/f_7_2"
            android:clickable="true"
            android:alpha="0"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@+id/f_7_3"
            android:layout_toEndOf="@+id/f_7_1" />

        <!--Button for men's bathroom-->
        <Button
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/f_7_3"
            android:clickable="true"
            android:alpha="0"
            android:layout_marginBottom="156dp"
            android:layout_marginEnd="139dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</FrameLayout>