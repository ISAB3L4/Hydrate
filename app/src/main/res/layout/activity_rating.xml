<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amy.hydrate.rating"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="false">

<!--make this switch between a few different comments-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/bathroom_text"
                android:id="@+id/bathroom_num" />



    <TextView android:text="@string/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"/>

    <RatingBar android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center_horizontal"
        android:numStars="5"
        android:stepSize="1"
        android:progressTint="@android:color/holo_red_dark"
        android:clickable="true"
        android:background="@android:color/white"
        android:rating="3" />

    <TextView android:text="@string/tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        />
<!--
    <ExpandableListView android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Click on the Tags that apply"
        android:layout_gravity="center_horizontal"
        android:entries="@string-array/tags"

        android:clickable="true"
        android:divider="@android:color/black"
        android:drawSelectorOnTop="true"
        android:fastScrollEnabled="true" />
-->
    <Button android:id="@+id/submit_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:clickable="true"
        android:text="@string/submit"
        android:textSize="15sp"
        android:layout_gravity="bottom|center_horizontal"/>


</LinearLayout>
