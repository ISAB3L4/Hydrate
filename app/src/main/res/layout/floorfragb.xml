<?xml version="1.0" encoding="utf-8"?>
<!--Page layout for basement-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floorb">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Button for fountain-->
    <Button
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:id="@+id/f_b_1"
        android:clickable="true"
        android:alpha="0"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/f_b_2" />

    <!--Button for women's bathroom-->
    <Button
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:id="@+id/f_b_2"
        android:clickable="true"
        android:alpha="0"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/f_b_1"
        android:layout_alignStart="@+id/f_b_3" />

    <!--Button for men's bathroom-->
    <Button
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:id="@+id/f_b_3"
        android:clickable="true"
        android:alpha="0"
        android:layout_alignTop="@+id/f_b_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    </RelativeLayout>


</FrameLayout>